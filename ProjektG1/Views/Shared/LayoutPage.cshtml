<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/css-index.css")">
    <link href="@Url.Content("~/Content/themes/base/all.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.11.1.js")"></script>
    <script src="@Url.Content("~/Scripts/MojeSkrypty.js")"></script>
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <div class="col-lg-2 col-md-3 col-sm-3" style="line-height: 50px;">
                    @Html.ActionLink("Task Manager", "Index", "Home", null, new { @class = "appName my-link" })
                </div>
                <div class="col-lg-offset-4 col-md-offset-3 col-sm-offset-2 col-lg-6 col-md-6 col-sm-7">
                    <ul class="nav navbar-nav" style="position: absolute; right: 0;">
                        @if (Request.IsAuthenticated)
                        {
                            <li><p class="usernameStyle">@Html.Encode(User.Identity.Name)</p></li>
                            <li>@Html.ActionLink("Sign out", "LogOut", "User", null, new { @class = "my-link" })</li>
                            <li>@Html.ActionLink("My Account", "DisplayAccData", "User", null, new { @class = "my-link" })</li>
                        }
                        <li>@Html.ActionLink("About",null,null,null, new { @class="my-link" })</li>
                        <li>@Html.ActionLink("Contact", null, null, null, new { @class = "my-link" })</li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <div>
    </div>

    @RenderBody()

    <footer>
        <div class="container text-center">
            <div class="col-lg-4 col-md-4 col-lg-offset-4 col-md-offset-4">
                <small>
                    <p class="text small-text">mariusz piątkowski && mateusz littwin</p>
                    <p class="text small-text">Task Manager - Group Project 2014 - Gdańsk University of Technology</p>
                </small>
            </div>
        </div>
    </footer>

</body>
</html>
