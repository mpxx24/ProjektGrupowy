<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css-index.css")">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link href="@Url.Content("~/Content/themes/base/all.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/jquery-1.6.4.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.11.1.js")"></script>
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <div class="col-lg-2 col-md-2 col-sm-2" style="line-height: 50px;">
                    @Html.ActionLink("Task Manager", "Index", "Home", null, new { @class = "appName" })
                </div>
                <div class="col-lg-offset-7 col-md-offset-7 col-sm-offset-7 col-lg-3 col-md-3 col-sm-3">
                    <ul class="nav navbar-nav">
                        @if (Request.IsAuthenticated)
                        {
                            <li>@Html.Encode(User.Identity.Name)</li>
                            <li>@Html.ActionLink("Sign out", "LogOut", "User", null, new { @class = "my-link" })</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Sign In", "Login", "User", null, new { @class = "my-link" })</li>
                            <li>@Html.ActionLink("Register", "Register", "User", null, new { @class = "my-link" })</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <div>
    </div>
    @RenderBody()


</body>
</html>

@*SKRYPTY*@

<script type="text/javascript">
    $(function () {
        $('.date-picker').datepicker();
    })
</script>
