<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/css-index.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/fonts.css")" >
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet"> @*font awesome*@ 
    <link href="@Url.Content("~/Content/themes/base/all.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/jquery-2.1.1.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-2.1.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.11.1.js")"></script>
    <script src="@Url.Content("~/Scripts/MojeSkrypty.js")"></script>
    

</head>
<body>
    <nav class="navbar">
        <div class="container">
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <div class="col-lg-2 col-md-3 col-sm-3" style="line-height: 50px;">
                    @Html.ActionLink("Task Manager", "Index", "Home", null, new { @class = "appName my-link" })
                </div>
                <div class="col-lg-offset-4 col-md-offset-3 col-sm-offset-2 col-lg-6 col-md-6 col-sm-7">
                    <ul class="nav navbar-nav" style="position: absolute; right: 0;">
                        
                        <li>@Html.ActionLink("About", "About", "Home", null, new { @class = "my-link" })</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "my-link" })</li>
                        @if (Request.IsAuthenticated)
                        {
                            //test dropdowna !
                            <li class="dropdown">    
                                @*<button type="button" data-toggle="dropdown" class="btn btn-default dropdown-toggle"></button>*@
                                <p class="usernameStyle dropdown-toggle my-link pointer" data-toggle="dropdown"role="menu">
                                    @Html.Encode(User.Identity.Name) <span class="caret"></span></p>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="@Url.Action("FriendList","User")"><i class="fa fa-group"></i>&nbsp;Friend list</a></li>
                                    <li><a href="@Url.Action("DisplayAccData","User")"><i class="fa fa-cog"></i>&nbsp;My account</a></li>
                                    <li class="divider"></li>
                                    <li><a href="@Url.Action("LogOut","User")"><i class="fa fa-sign-out"></i>&nbsp;Sign out</a></li>
                                </ul>
                            </li>
                            @*<li><p class="usernameStyle">@Html.Encode(User.Identity.Name)</p></li>*@
                            @*<li>@Html.ActionLink("Sign out", "LogOut", "User", null, new { @class = "my-link" })</li>
                            <li>@Html.ActionLink("My Account", "DisplayAccData", "User", null, new { @class = "my-link" })</li>*@
                        }
                        
                    </ul>
                </div><!-- end col etc..-->
            </div><!-- end collapse navbar-collapse -->
        </div><!-- end container -->
    </nav>

    @RenderBody()

    <footer>
        <div class="container text-center">
            <div class="col-lg-42 col-md-12">
                <p class="footer-text">
                    Task Manager - Group Project 2014 - Gdańsk University of Technology | mariusz piątkowski && mateusz littwin
                </p>
            </div>
        </div>
    </footer>

</body>
</html>
