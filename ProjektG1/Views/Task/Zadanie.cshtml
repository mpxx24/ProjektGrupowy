@using System.Web.UI.WebControls
@using ProjektG1.Models
@model ProjektG1.Models.Task

@{
    ViewBag.Title = "Zadanie";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/css-zadanie.css")"/>
}

@* work place *@

<div class="container">
    <div class="col-lg-12 col-md-12 wrapper">
        <div class="col-lg-3 col-md-3">
            @{ int i = 1;}
            @foreach (Task item in ViewBag.Zadanie)
            {
                <div class="task" title=task @i>
                    <input type="submit" name="ButtonTask" value="@item.Tytul" id="ButtonTask" class="btn btn-default buttonTask" />

                    <div class="toggler" id="toggler">
                        <p>
                            Dodano przez: @item.OsobaDodajacaZadanie
                            <br />
                            Osoba odpowiedzialna: @item.OsobaOdpowiedzialna
                            <br />
                            Data dodania: @item.DataDodania
                            <br />
                            komentarz: @item.Komentarz
                        </p>
                    </div>

                    <div class="task-controls-area">
                        @using (Html.BeginForm("Delete", "Task", new { id = item.ID }))
                        {
                            <button type="submit" name="ButtonUsun" value="Usun" id=@item.ID class="btn btn-default inline usun" ><i class="fa fa-trash"></i></button>
                        }
                        @using (Html.BeginForm("EdytujTask", "Task", new { id = item.ID }))
                        {
                            <input type="submit" name="ButtonEdytuj" value="Edytuj" id=@item.ID class="btn btn-default inline" />
                        }
                    </div>

                </div>
                    i++;
               } 
        </div>

        <div class="col-lg-9 col-md-9">
            <div class="col-lg-4 col-md-4 task-group" id="droppable">
                <p class="task-group-name">Group name</p>
                <ul class="items list-group">
                    <li class="task">
                        <table cellpadding="0" cellspacing="0">
                            <tbody>
                                <tr>
                                    <td class="col-lg-9 task-text">jakis tekst</td>
                                    <td class="col-lg-3 task-controls-area">
                                        @*potem tu musze pozmieniac, ale na razie niech tak zostanie  *@
                                        @using (Html.BeginForm("Delete", "Task")) 
                                        {
                                            <input type="submit" name="ButtonUsun" value="del" class="btn btn-tm btn-delete inline">
                                        }
                                        @using (Html.BeginForm("EdytujTask", "Task"))
                                        {
                                            <input type="submit" name="ButtonEdytuj" value="edit" class="btn btn-tm btn-edit inline">
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </li>
                    <li class="task">
                        b
                    </li>
                </ul>
                @using (Html.BeginForm("DodajTask", "Task"))
                {
                    <input type="submit" value="Dodaj" />
                }
            </div>

        </div>
    </div>
</div>

@* end of work place *@






