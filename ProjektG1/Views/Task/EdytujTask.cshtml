@model ProjektG1.Models.Task

@{
    ViewBag.Title = "EdytujTask";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<section class="section">
    <div class="container">
        <div class="col-lg-4 col-md-6 col-sm-8 col-lg-offset-4 col-md-offset-3 col-sm-offset-2">
            <div class="flex-wrapper">
            <h2>EdytujTask</h2>

            <div id="form-area">
                @using (Html.BeginForm("Edit", "Task", FormMethod.Post, new { @id = ViewBag.EditTask.ID, @class = "form-horizontal" }))
                {
                    <div class="form-group">
                        <div class="col-lg-12">
                            @Html.TextBoxFor(m => m.Tytul, new { @Value = @ViewBag.EditTask.Tytul, @class = "my-input form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-12">
                            @Html.TextBoxFor(m => m.OsobaOdpowiedzialna, new { @Value = ViewBag.EditTask.OsobaOdpowiedzialna, @class = "my-input form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-12">
                            @Html.TextAreaFor(m => m.Komentarz, new { @Value = ViewBag.EditTask.Komentarz, @class = "my-input form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <Button class="btn btn-primary my-button col-lg-12 col-md-12 col-sm-12 col-xs-12">Save</Button>
                        </div>
                    </div>
                }
            </div>
            <p>
                <a href="@Url.Action("Powrót", "Zadanie")"><i class="fa fa-arrow-left"></i>&nbsp;Powrót</a>
            </p>
        </div>
            </div>
    </div>
</section>
