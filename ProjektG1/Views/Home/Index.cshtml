@model ProjektG1.Models.User
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<!-- to do content -->

<section class="section">
    <div class="container">
        <div class="row">

            <div class="col-md-6 col-lg-6 col-md-offset-3 col-lg-offset-3 text-center">
                <div class="row" id="baner-area">
                    <h1>Organize your time - better!</h1>
                    <h1><small>Sign in to your account below</small></h1>
                </div>

                <div class="row" id="form-area">
                    @using (@Html.BeginForm("Zadanie","Task",FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.ValidationSummary(true, "Niepoprawne dane logowania");
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-md-offset-2 col-lg-8 col-md-8">
                                @Html.TextBoxFor(u => u.Username, new { @class = "my-input form-control", placeholder = "Username" })
                                @Html.ValidationMessageFor(u => u.Username)
                                @*<input type="text" class="form-control" placeholder="login">*@
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-offset-2 col-md-offset-2 col-lg-8 col-md-8">
                                @Html.PasswordFor(u => u.Password, new { @class = "my-input form-control", placeholder = "Password" })
                                @Html.ValidationMessageFor(u => u.Username)
                                @*<input type="password" class="form-control" placeholder="password">*@
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <div class="col-lg-offset-1 col-md-offset-1 col-lg-5 col-md-5">
                                <div class="checkbox">
                                    <label>
                                        @Html.CheckBoxFor(u => u.RememberMe)
                                        Remember Me
                                    </label>
                                </div>
                            </div>

                            <div class="col-lg-offset-1 col-md-offset-1 col-lg-4 col-md-4">
                                <button type="submit" class="btn btn-primary">Sign in</button>
                            </div>
                        </div>
                    }
                    @*<form role="form" class="form-horizontal">
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Login</label>
                            <div class="col-lg-8">
                                <input type="text" class="form-control" placeholder="login">
                            </div>
                        </div>
                        
                    </form>*@

                </div>
            </div>
        </div>
    </div>
</section>